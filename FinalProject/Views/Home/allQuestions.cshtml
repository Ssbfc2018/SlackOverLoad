@model List<Question>

@{
    ViewData["Title"] = "allQuestions";
}

<h1>Question Management</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Content
            </th>
            <th>
                User
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Question q in Model) {
        <tr>
            <td>
                @Html.DisplayFor(model => q.Title)
            </td>
            <td>
                @Html.DisplayFor(model => q.Content)
            </td>
            <td>
                @Html.DisplayFor(model => q.User.UserName)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", "Question", new { questionId=q.Id }) |
                @Html.ActionLink("Delete", "DeleteDoubleCheck", "Question", new { questionId=q.Id })
            </td>
        </tr>
}
    </tbody>
</table>
